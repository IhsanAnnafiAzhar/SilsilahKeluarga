<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="18dp"
        android:right="12dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#999" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="15dp"
        android:right="15dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#ddd"
                android:startColor="#fff"
                android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="#666" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>
