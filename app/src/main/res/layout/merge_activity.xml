<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="30dp"
            android:paddingEnd="15dp"
            android:paddingBottom="50dp">

            <include
                android:id="@+id/merge_base"
                layout="@layout/pezzo_albero" />

            <TextView
                style="@style/AppTheme.Suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="@string/select_tree" />

            <LinearLayout
                android:id="@+id/merge_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical" />

            <TextView
                style="@style/AppTheme.Suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/choose_output" />

            <RadioGroup
                android:id="@+id/merge_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/merge_radio_annex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" />

                <RadioButton
                    android:id="@+id/merge_radio_generate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/generate_new" />
            </RadioGroup>

            <EditText
                android:id="@+id/merge_rename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_of_tree"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:visibility="gone" />

            <Button
                android:id="@+id/merge_button"
                style="@style/AppTheme.BottoneColorato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:enabled="false"
                android:text="@string/merge" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/progress" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
